<h1 class='text-center'>New game</h1>
<ul class="list-inline text-center"><% @letters.each do |letter| %>
  <li class="letters"><%= letter %></li>
  <% end %>
</ul>

<p class='text-center'>What is the longest word you can find?</p>

<form action="/score" method="post" class="text-center">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer">
  <input type="hidden" name="grid" value="<%= @letters.join %>">
  <input type="submit" value="play">
</form>
